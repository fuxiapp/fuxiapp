<view class="content" bind:__l="__l"><view class="content-top"><view class="v-logo"><image class="logo" src="../../static/logo.jpg"></image></view><view class="v-title"><text class="title">西奈移动应用</text></view></view><view class="margin-center"><view class="v-username"><view class="v-img-before"><image src="../../static/image/icon_user.png"></image></view><input class="username" maxlength="20" type="text" placeholder="请输入账号" placeholder-style="color:#BEBEBE" focus="true" data-event-opts="{{[['input',[['checkUser',['$event']]]],['blur',[['queryUser',['$event']]]]]}}" value="{{username}}" bindinput="__e" bindblur="__e"/><view class="v-img-after"><image class="img_del" mode="aspectFit" src="../../static/image/icon_del.png" data-event-opts="{{[['tap',[['delUser',['$event']]]]]}}" bindtap="__e"></image></view></view><view class="v-password"><view class="v-img-before"><image src="../../static/image/icon_pwd.png"></image></view><input class="password" maxlength="20" type="{{pwdType}}" placeholder-style="color:#BEBEBE" placeholder="请输入密码" data-event-opts="{{[['input',[['checkPwd',['$event']]]]]}}" value="{{password}}" bindinput="__e"/><view class="v-img-after"><image class="img_del" mode="aspectFit" src="{{switchImg}}" data-event-opts="{{[['tap',[['switchPwd',['$event']]]]]}}" bindtap="__e"></image></view></view><view class="v-department"><view class="v-img-before"><image src="../../static/image/icon_dept.png"></image></view><input class="department" type="text" disabled="true" placeholder-style="color:#BEBEBE" placeholder="登录店铺名" value="{{department}}"/></view></view><view class="margin-bottom"><button data-event-opts="{{[['tap',[['login',['$event']]]]]}}" class="btn-login" style="{{'background-color:'+(btnColor)+';'}}" bindtap="__e">登 录</button></view></view>