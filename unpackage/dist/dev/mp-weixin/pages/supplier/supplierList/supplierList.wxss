.v-sel-customer {
  width: 100%;
  overflow: hidden;
  background: #fff;
}
.v-sel-customer .list-con {
    margin-top: 140rpx;
}
.v-sel-customer .list-con .info-con {
      width: 100%;
      overflow: hidden;
      margin: 0rpx auto;
}
.v-sel-customer .list-con .info-con .list {
        width: 92%;
        overflow: hidden;
        border-bottom: 1rpx solid #f4f4f4;
        padding: 30rpx 4%;
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-pack: justify;
        -webkit-justify-content: space-between;
            -ms-flex-pack: justify;
                justify-content: space-between;
        -webkit-box-align: center;
        -webkit-align-items: center;
            -ms-flex-align: center;
                align-items: center;
}
.v-sel-customer .list-con .info-con .list .base-info {
          width: 80%;
          line-height: 50rpx view;
            line-height-width: 98%;
          line-height-overflow: hidden;
          line-height-white-space: nowrap;
          line-height-text-overflow: ellipsis;
}
.v-sel-customer .list-con .info-con .list .base-info .name {
            color: #333;
            font-size: 36rpx;
            font-weight: bold;
}
.v-sel-customer .list-con .info-con .list .base-info .desc {
            color: #ccc;
            font-size: 30rpx;
}
.v-sel-customer .list-con .info-con .list .base-info .desc text {
              padding-left: 10rpx;
}
.v-sel-customer .list-con .info-con .list .base-info .desc .price {
              color: orange;
}
.v-sel-customer .list-con .info-con .list image {
          width: 18rpx;
          height: 26rpx;
          vertical-align: middle;
          margin-left: 10rpx;
}

